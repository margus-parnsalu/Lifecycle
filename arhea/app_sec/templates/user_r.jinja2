{% extends "base.jinja2" %}
{% block content %}

<h3>Users</h3>

    <a class="btn btn-default" href="{{ request.route_url('user_add') }}" role="button">Add User</a>
    <hr>

    <table class="table">
            <thead>
                <tr>
                  <th>Username</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                </tr>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ request.route_url('user_edit', usr_id=user.id) }}">
                             {{ user.username }} </a></td>
                        <td>{{ user.start_date|datetimeformat }}</td>
                        <td>{{ user.end_date|datetimeformat }}</td>
                    </tr>
                {% endfor %}
            </tbody>
    </table>


{% endblock %}