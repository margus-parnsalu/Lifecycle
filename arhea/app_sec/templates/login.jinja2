
{% extends "base.jinja2" %}
{% block content %}


<h3>Login:</h3>{{message}}{{came_from}}

<div class="well">

    <div class="row">
        <div class="col-md-4">

            <form method="post" name="LoginForm">
                {% include 'form_error.jinja2' %}

                <div class="form-group">
                    {{ form.came_from }}
                </div>
                <div class="form-group">
                    {{ form.login.label }}
                    {{ form.login(class="form-control input-sm") }}
                </div>
                <div class="form-group">
                    {{ form.password.label }}
                    {{ form.password(class="form-control input-sm") }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Login</button>
                </div>
            </form>

        </div>
    </div>

</div>


{% endblock %}