{% extends "base.jinja2" %}
{% block content %}


    <h3>User</h3>

    <div class="well">

        <div class="row">
        <div class="col-md-4">

        <form action="" method="post" name="UserForm">

         {% include 'form_error.jinja2' %}

          <div class="form-group">
            {{ form.username.label }}
            {{ form.username(class="form-control input-sm") }}
          </div>
          <div class="form-group">
            {{ form.pwd.label }}
            {{ form.pwd(class="form-control input-sm") }}
          </div>
          <div class="form-group">
            {{ form.groups.label }}
            {{ form.groups(class="form-control input-sm") }}
          </div>
          <div class="form-group">
            {{ form.end_date.label }}
            {{ form.end_date(class="form-control input-sm", placeholder="Optional. Ex: 2000-05-25 15:00") }}
          </div>
          <div class="form-group">
              <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </form>

        </div>
        </div>

    </div>

{% endblock %}
