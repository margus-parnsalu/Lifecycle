<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>Applications</title>

    <link href="/static/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/static/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/static/main.css" rel="stylesheet">
    <link href="/static/css/datepicker.css" rel="stylesheet">
    <script src="/static/js/jquery-1.11.3.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/bootstrap-datepicker.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<script>

$(function() {
  $(".datepicker").datepicker({format:'dd-mm-yyyy', weekStart:1});
});

</script>

<body>

<nav class="navbar navbar-default" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="{{ request.route_url('home') }}">ARH</a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">

    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Applications <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="{{ request.route_url('application_view') }}">Applications</a></li>
          <li class="divider"></li>
        </ul>
      </li>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Departments <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="{{ request.route_url('department_view') }}">Departments</a></li>
          <li class="divider"></li>
          <li><a href="{{ request.route_url('department_add') }}">Add Department</a></li>
        </ul>
      </li>

       <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Employees <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="{{ request.route_url('employee_view') }}">Employees</a></li>
          <li class="divider"></li>
          <li><a href="{{ request.route_url('employee_add') }}">Add Employee</a></li>
        </ul>
      </li>


        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="{{ request.route_url('user_view') }}">Users</a></li>
              <li class="divider"></li>
              <li><a href="{{ request.route_url('group_view') }}">Groups</a></li>
            </ul>
          </li>


    </ul>

    {% if logged_in: %}
        <div class="container">
            <a class="btn btn-default btn-xs navbar-btn navbar-right" href="{{ request.route_url('logout') }}">x</a>
            <p class="navbar-text navbar-right">User: {{ logged_in }}&nbsp;&nbsp;</p>
        </div>
    {% endif %}

    {% if logged_in==None or logged_in=='': %}
        <div class="container">
            <a class="btn btn-default btn-xs navbar-btn navbar-right" href="{{ request.route_url('login') }}">Login</a>
        </div>
    {% endif %}


  </div><!-- /.navbar-collapse -->
</nav>

<div class="row">
      <div class="container">
        {% if request.session.peek_flash() %}
          <div class="alert alert-success">
            {% for msg in request.session.pop_flash() %}
                <li>{{ msg }}</li>
            {% endfor %}
          </div>
        {% endif %}
        {% if request.session.peek_flash('fail') %}
          <div class="alert alert-warning">
            {% for msg in request.session.pop_flash('fail') %}
                <li>{{ msg }}</li>
            {% endfor %}
          </div>
        {% endif %}
      </div>
</div>

<div class="row">
      <div class="container">

          {% block content %}{% endblock %}

      </div>
</div>

</body>
</html>



