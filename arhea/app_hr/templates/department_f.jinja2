{% extends "base.jinja2" %}
{% block content %}

<h3>Add Department</h3>

<div class="well">

    <div class="row">
        <div class="col-md-4">

            <form method="post" name="DepartmentForm">
                {% include 'form_error.jinja2' %}

                <div class="form-group">
                    {{ form.department_name.label }}
                    {{ form.department_name(class="form-control input-sm") }}
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>

        </div>
    </div>

</div>
{% endblock %}