{% extends "base.jinja2" %}
{% block content %}

{% from 'querysorter_m.jinja2' import qsorter with context %}

<h3>Departments</h3>

<a class="btn btn-default" href="{{ request.route_url('department_add') }}" role="button">Add Department</a>
<hr>

<table class="table table-hover">
    <thead>
    <tr>
        <th>{{ qsorter('department_view', 'Department Name', 'department') }}</th>
    </tr>
    <tbody>
    {% for department in records %}
    <tr>
        <td><a href="{{ request.route_url('department_edit',
                                                       dep_id=department.department_id) }}">
            {{ department.department_name }} </a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'pager.jinja2' %}

{% endblock %}