{% extends "base.jinja2" %}
{% block content %}

    <h3>{{ app_name }}: edit Application & Tags</h3>




    <div class="well">

       <div class="row">
       <div class="col-md-6">

        <form action="" method="post" name="ApplicationTagForm">

            {% include 'form_error.jinja2' %}

              <div class="form-group">
                {{ form.app.app_name.label }}
                {{ form.app.app_name(class="form-control input-sm") }}
              </div>
              <div class="form-group">
                {{ form.app.alias.label }}
                {{ form.app.alias(class="form-control input-sm") }}
              </div>
               <div class="form-group">
                {{ form.app.status.label }}
                {{ form.app.status(class="form-control input-sm") }}
              </div>
              <div class="form-group">
                {{ form.app.stereotype.label }}
                {{ form.app.stereotype(class="form-control input-sm") }}
              </div>
              <div class="form-group">
                {{ form.app.note.label }}
                {{ form.app.note(rows=5, class="form-control input-sm") }}
              </div>


          <div class="form-group">
              <button type="submit" name="app_tag_submit" class="btn btn-default">Submit</button>
         </div>


       </div>

       <div class="col-md-1">
       </div>

       <div class="col-md-4">

              {% for tag in form.tags %}
                  <div class="form-group">
                    {{ tag.property.label }}
                    {{ tag.property(class="form-control input-sm", readonly=true) }}
                 </div>

                  <div class="form-group">
                    {{ tag.value.label }}
                    {{ tag.value(class="form-control input-sm", size=40) }}
                  </div>

                  {% if "Development Domain" in tag.property() %}
                    <div class="form-group">
                        {{ tag.domain_list(class="form-control input-sm") }}
                    </div>
                  {% endif %}

              {% endfor %}


        </form>

       </div>
       </div>

       <div class="col-md-1">
       </div>


<script>
$("input[name~='domain_list']")
  .change(function () {
        var str = $("input[name~='value']").val();
        $( "select option:selected" ).each(function() {
            str = $( this ).val();});
    $( "input[name~='value']" ).val( str );
  })
</script>

    </div>
{% endblock %}