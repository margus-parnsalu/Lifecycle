{% extends "base.jinja2" %}
{% block content %}

<h3>{{ app_name }}: edit Tag</h3>

<div class="well">
    <div class="row">
        <div class="col-md-5">

            <form method="post" name="TagUpdateForm">
                {% include 'form_error.jinja2' %}

                <div class="form-group">
                    {{ form.property.label }}
                    {{ form.property(class="form-control input-sm", readonly=true) }}
                </div>
                <div class="form-group">
                    {{ form.value.label }}
                    {{ form.value(class="form-control input-sm") }}
                    {% if "Development Domain" in form.property() %}
                    {{ form.domain_list(class="form-control input-sm") }}
                    {% endif %}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
$( "#domain_list" )
  .change(function () {
        var str = $("#value").val();
        $( "select option:selected" ).each(function() {
            str = $( this ).val();});
    $( "#value" ).val( str );
  })
</script>

{% endblock %}